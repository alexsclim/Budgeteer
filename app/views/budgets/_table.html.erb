      </tr>
      <tr>
        <td>
          Other
        </td>
        <td>
          <%= number_to_currency @budget.allocated_other %>
        </td>
        <td>
          <%= number_to_currency @budget.spent_other %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Total</b>
        </td>
        <td>
          <%= number_to_currency allocated_balance(@budget.attributes) %>
        </td>
        <td>
          <%= number_to_currency real_balance(@budget.attributes) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
