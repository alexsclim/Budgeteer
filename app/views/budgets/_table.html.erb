      </tr>
      <tr>
        <td>
          Transportation
        </td>
        <td>
          <%= number_to_currency @budget.allocated_transportation %>
        </td>
        <td>
          <%= number_to_currency @budget.spent_transportation %>
        </td>
      </tr>
      <tr>
        <td>
          Health
        </td>
        <td>
          <%= number_to_currency @budget.allocated_health %>
        </td>
        <td>
          <%= number_to_currency @budget.spent_health %>
        </td>
      </tr>
      <tr>
        <td>
          Clothing
        </td>
        <td>
          <%= number_to_currency @budget.allocated_clothing %>
        </td>
